    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <script type="text/javascript">
        $(function () {
            $('#Tanggal').datetimepicker({
                viewMode: 'years',
                format: 'DD/MM/YYYY'
            }); });
    </script>*@
</body>
</html>





