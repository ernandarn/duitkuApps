@model DuitkuApps.Models.Cicilan

@{
    ViewBag.Title = "Tambah Detail Cicilan";
}
<style>
    #form-group {
        font-family: 'Times New Roman', Times, serif;
        font-size: 10px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        font-family: 'Harlow Solid';
        font-size: 45px;
        color: red;
    }

    #form-horizontal {
    }
</style>

<br />
<h2><strong>@ViewBag.Title</strong></h2>
<hr />
<br />
<div class="container" style="margin-left:200px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Id_komponen, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id_komponen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id_komponen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nama_cicilan, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nama_cicilan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nama_cicilan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tgl_mulai, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tgl_mulai, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Tgl_mulai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tgl_bayar, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tgl_bayar, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Tgl_bayar, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Jmlh_bayar, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Jmlh_bayar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Jmlh_bayar, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tambah" class="btn btn-success" />
                </div>
            </div>
        </div>

        @section Scripts {

            @Scripts.Render("~/bundles/jqueryui")
            @Styles.Render("~/Content/cssjqryUi")

            <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/MM/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-0:+20"
         });

     });
            </script>

        }
}
</div>
  
<div>
    @Html.ActionLink("Kembali ke Halaman Detail Cicilan", "TampilCicilan")
</div>

