                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" value="Masuk" class="btn btn-danger" style="color:white" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <p>
                            Tidak Punya Akun? @Html.ActionLink("Daftar Pengguna Baru", "Register")
                        </p>
                    </div>
                </div>
               
    }
</div>


